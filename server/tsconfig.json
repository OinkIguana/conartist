{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "removeComments": true,
    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "moduleResolution": "node",

    "experimentalDecorators": true,

    "lib": [ "DOM", "es2017", "es2015" ]
  },
  "compileOnSave": true
}

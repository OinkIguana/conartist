<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme" />
    <style name="Theme.ConArtist" />

    <style name="Theme.ConArtist.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryDark">@color/background_toolbar</item>
        <item name="colorAccent">@color/brand_variant</item>

        <item name="colorControlNormal">@color/text_placeholder</item>
        <item name="colorControlActivated">@color/brand</item>
        <item name="colorControlHighlight">@color/brand</item>

        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text_placeholder</item>
    </style>

    <style name="Theme.ConArtist.Button" />
    <style name="Theme.ConArtist.Button.Big">
        <item name="colorAccent">@color/brand</item>
        <item name="colorButtonNormal">@color/background_variant</item>
        <item name="colorControlHighlight">@color/brand_variant</item>
    </style>

    <style name="Theme.ConArtist.Button.Secondary">
        <item name="colorAccent">@color/background_variant</item>
        <item name="colorControlHighlight">@color/background_highlight</item>
    </style>
</resources>

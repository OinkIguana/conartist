<resources>
    <style name="ConArtist" />

    <style name="ConArtist.Toolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:background">@color/background_toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.ConArtist.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.ConArtist.Subtitle</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ConArtist.Button.Big" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/Theme.ConArtist.Button.Big</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="ConArtist.Button.Secondary" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">48dp</item>
        <item name="android:theme">@style/Theme.ConArtist.Button.Secondary</item>
    </style>
    <style name="ConArtist.Button.Borderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/text_placeholder</item>
        <item name="android:theme">@style/Theme.ConArtist.Button.Secondary</item>
    </style>

    <style name="ConArtist.TextField" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">15sp</item>
        <item name="hintTextAppearance">@style/TextAppearance.ConArtist.TextInput.Hint</item>
        <item name="errorTextAppearance">@style/TextAppearance.ConArtist.TextInput.Error</item>
    </style>
</resources>

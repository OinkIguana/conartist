<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" />
    <style name="TextAppearance.ConArtist" />
    <style name="TextAppearance.ConArtist.Title">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.ConArtist.Subtitle">
        <item name="android:textColor">@color/text_placeholder</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.ConArtist.TextInput.Hint" parent="@style/TextAppearance.Design.Hint">
        <item name="android:textColor">@color/text_placeholder</item>
    </style>
    <style name="TextAppearance.ConArtist.TextInput.Error" parent="@style/TextAppearance.Design.Error">
        <item name="android:textColor">@color/error</item>
    </style>
</resources>
